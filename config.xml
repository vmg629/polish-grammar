<?xml version='1.0' encoding='utf-8'?>
<widget id="com.polishgrammar.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Gramatyka polska</name>
    <description>
        Materiały pomocnicze do nauki języka polskiego
    </description>
    <author email="vmg629@gmail.com" href="">
        Michael Wasilew
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/ldpi/icon.png" />
        <icon density="mdpi" src="res/icon/android/mdpi/icon.png" />
        <icon density="hdpi" src="res/icon/android/hdpi/icon.png" />
        <icon density="xhdpi" src="res/icon/android/xhdpi/icon.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
</widget>
